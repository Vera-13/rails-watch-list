<div class="navbar">
  <i class="fa-solid fa-film"></i>
  <div class="links">
    <%= link_to "My lists", root_path %>
    <%= link_to "New list", lists_new_path  %>
  </div>
  </div>

  <%# <div class="banner2"> %>
  <div class="card-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
   url('<%=cl_image_path @list.photo.key%>')">
  <h1><%= @list.name %></h1>
  </div>

    <%# <div class="container">
      <h1><%= @list.name %></h1>
    <%# </div>
</div> %>


<div class="hold_button">
  <div class="btn btn-success">
    <%= link_to "Add movie", new_bookmark_path %>
  </div>
   <div class="btn btn-success">
    <%= link_to "Go Back To Lists", root_path %>
  </div>

</div>



 <div class="cards">
  <% @list.bookmarks.each do |book| %>
    <div class="card-category">
      <%= image_tag book.movie.poster_url, alt: 'poster_movie'%>
        <div class="card-info">
          <div class="div-title">
            <span id="title"><%= book.movie.title %></span> - <%= book.movie.rating %> <i class="fa-solid fa-star"></i>
          </div>
          <div class="info">
            <div>
              <%= book.movie.overview %>
            </div>
            <div class="foots">
            <span>
            <i class="fa-solid fa-quote-left"></i>
            <%= book.comment %>
            </span>
            <%= link_to "Delete",bookmark_path(book), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>

          </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
